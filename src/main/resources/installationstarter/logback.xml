<configuration>
  <property name="LOG_DIR" value="${log.dir:-logs}"/>
  <property name="APP_NAME" value="installationstarter"/>

  <appender name="FILE-SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
    <discriminator class="ch.qos.logback.classic.sift.MDCBasedDiscriminator">
      <key>module</key>
      <defaultValue>unknown</defaultValue>
    </discriminator>

    <sift>
      <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${module}/${APP_NAME}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
          <fileNamePattern>${LOG_DIR}/${module}/archive/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
          <maxFileSize>5MB</maxFileSize>
          <maxHistory>60</maxHistory> <!-- Prune after 60 days -->
          <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>

        <encoder>
          <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
      </appender>
    </sift>
  </appender>

  <root level="INFO">
    <appender-ref ref="FILE-SIFT"/>
  </root>
</configuration>
